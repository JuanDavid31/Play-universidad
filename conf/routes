# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code

#GET     /saludo/:nombre             controllers.HomeController.saludo(nombre: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /                          controllers.SuperController.indice

GET     /usuarios                      controllers.SuperController.mostrarUsuarios

GET     /agregarUsuario/:id/:nombre        controllers.SuperController.adicionarUsuario(id: Int, nombre: String)

GET     /eliminarUsuario/:id                controllers.SuperController.eliminarUsuario(id: Int)

GET     /agregarUsuariosRandom              controllers.SuperController.agregarUsuariosRandom

GET     /eliminarUsuarios                   controllers.SuperController.eliminarUsuarios